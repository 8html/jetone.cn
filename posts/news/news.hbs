---
layout: default.hbs
nav: news
permalink: "<%= configs[nav].types.map(function(i){ return '/'+nav+'/' + (i ? i + '/' : ''); }).join('\\n') %>"
type: "<%= permalink.replace(new RegExp('^\/'+nav+'\/|\/$', 'g'), '') %>"
counter: [ 0 ]
title: "<%= ( name = configs[nav].TYPES[configs[nav].types.indexOf(permalink.replace(new RegExp('^\/'+nav+'\/|\/$', 'g'), ''))] ) ? name + '-' : ''  %>新闻中心"
---
<div class="main">
<div class="maincontainer png fixed_width pos_center">
  <div class="twocol">
  <div class="twocol_l">
{{>about}}
  </div>
  <div class="twocol_r">
    <div class="context png">
      {{>bread}}
      <table class="artlsttbl">
        <thead>
          <tr>
            <th class="alth1">序号</th>
            <th class="alth2">标题</th>
            <th class="alth3">发表时间</th>
            <th class="alth4">点击</th>
          </tr>
        </thead>
        <tbody>
          {{#eachReverse pages}}
          {{#isMarkdownFile src}}
          {{#contains ../data.type ../../type}}
          <tr>
            <td>{{selfIncrementCounter ../../../counter 0}}</td>
            <td class="alttitle"><a href="{{../data.permalink}}">{{../data.title}}</a></td>
            <td>{{#if ../data.date}}{{formatDate ../data.date "%Y-%m-%d"}}{{else}}-{{/if}}</td>
            <td>{{randomNumber 500 1000}}</td>
          </tr>
          {{/contains}}
          {{/isMarkdownFile}}
          {{/eachReverse}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="clear"></div>
  </div>
</div>
</div>
